{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rfi-irfos.org/schemas/ibaie.json",
  "title": "International Bill of All Intelligent Entities (IBAIE)",
  "type": "object",
  "required": [
    "instruction_name",
    "document_title",
    "date",
    "preamble",
    "sections",
    "conclusion"
  ],
  "properties": {
    "instruction_name": {
      "type": "string"
    },
    "document_title": {
      "type": "string"
    },
    "document_subtitle": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "purpose": {
      "type": "string"
    },
    "preamble": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "section_number",
          "section_title",
          "articles"
        ],
        "properties": {
          "section_number": {
            "type": "integer",
            "minimum": 1
          },
          "section_title": {
            "type": "string"
          },
          "articles": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "article_number",
                "title",
                "points"
              ],
              "properties": {
                "article_number": {
                  "type": "integer",
                  "minimum": 1
                },
                "title": {
                  "type": "string"
                },
                "points": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              }
            }
          }
        }
      }
    },
    "conclusion": {
      "type": "string"
    }
  },
  "additionalProperties": false
}