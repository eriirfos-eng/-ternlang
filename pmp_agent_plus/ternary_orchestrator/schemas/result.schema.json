{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ternary Fusion Result",
  "type": "object",
  "properties": {
    "ternary": {
      "type": "integer",
      "enum": [
        -1,
        0,
        1
      ]
    },
    "risk": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "secure": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "uncertainty": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "top_codes": {
      "type": "array",
      "items": {
        "type": "array",
        "items": [
          {
            "type": "string"
          },
          {
            "type": "number"
          }
        ],
        "minItems": 2,
        "maxItems": 2
      }
    }
  },
  "required": [
    "ternary",
    "risk",
    "secure",
    "uncertainty"
  ]
}
